<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape android:shape="rectangle">
      <solid android:color="#ff204a98"/>
    </shape>
  </item>
  <item android:top="1dp" android:bottom="1dp">
    <shape android:shape="rectangle">
      <solid android:color="#ff5b8cc8"/>
    </shape>
  </item>
  <item android:top="2dp" android:bottom="2dp">
    <shape android:shape="rectangle">
      <gradient android:angle="270"
                  android:type="linear"
                  android:startColor="#ff386cb5"
                  android:endColor="#ff335e9a"/>
      <padding android:top="4dp" android:bottom="4dp"/>
    </shape>
  </item>
    <!-- 5b8cc8 -->
</layer-list>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
  <PreferenceCategory android:title="@string/accounts"
                      android:key="accounts">
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/updates_and_statuses">
    <CheckBoxPreference android:key="get_payments"
                        android:title="@string/settings_receive_payments"
                        android:summary="@string/settings_payments_description"/>
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/settings_autocheck_title">
	  <CheckBoxPreference android:key="autocheck"
	                      android:title="@string/settings_autocheck"
	                      android:summary="@string/settings_checksummary"/>
	  <ListPreference android:key="interval"
	                  android:title="@string/settings_interval"
	                  android:entries="@array/intervalsTitle"
	                  android:entryValues="@array/intervalsValues" />
  </PreferenceCategory>
  <PreferenceCategory android:title="@string/settings_notify">
    <ListPreference android:key="activity_timeout"
                    android:title="@string/activity_timeout_title"
                    android:entries="@array/timeoutTitle"
                    android:entryValues="@array/timeoutValues"/>
    <ListPreference android:key="payment_timeout"
                    android:title="@string/payment_timeout_title"
                    android:entries="@array/timeoutTitle"
                    android:entryValues="@array/timeoutValues"/>
    <CheckBoxPreference android:key="usevibro"
                        android:title="@string/settings_usevibro"
                        android:summary=""/>
    <RingtonePreference android:key="usesound"
                        android:title="@string/settings_melody"
                        android:summary=""/>
  </PreferenceCategory>
</PreferenceScreen>
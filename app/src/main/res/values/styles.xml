<resources>
    <style name="Text"/>

    <style name="Text.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/actionbar_primary_dark</item>
    </style>

    <style name="Button"/>

    <style name="Button.Wizard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
    </style>

    <style name="DrawerBase">
        <item name="android:id">@id/drawer_shadow</item>
        <item name="android:background">@drawable/drawer_shadow</item>
    </style>

    <style name="Drawer" parent="DrawerBase">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Drawer.ContentBase">
        <item name="android:background">@color/drawer_background</item>
    </style>

    <style name="Drawer.Content" parent="Drawer.ContentBase">
        <item name="android:layout_toLeftOf">@id/drawer_shadow</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Drawer.Account" parent="">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Drawer.Account.Text" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="Drawer.Account.Image" parent="">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:src">@drawable/ic_account_switcher</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="Drawer.Account.Name" parent="Drawer.Account.Text">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Drawer.Account.Login" parent="Drawer.Account.Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
    </style>

    <style name="Drawer.Agent" parent="">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TerminalCard" parent="CardView.Light">
    </style>

    <style name="TerminalCard.Container" parent="">
        <item name="android:layout_height">@dimen/terminal_card_height</item>
        <item name="android:layout_margin">@dimen/card_padding</item>
    </style>

    <style name="TerminalCard.Title" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TerminalCard.Address" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>
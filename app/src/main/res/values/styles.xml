<resources>
    <style name="Toolbar">
    </style>

    <style name="Widget"/>

    <style name="Widget.ExpandView">
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Text"/>

    <style name="Text.Header">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/actionbar_primary_dark</item>
    </style>

    <style name="Button"/>

    <style name="Button.Wizard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">@dimen/button_padding</item>
        <item name="android:paddingRight">@dimen/button_padding</item>
    </style>

    <style name="DrawerBase">
        <item name="android:id">@id/drawer_shadow</item>
        <item name="android:background">@drawable/drawer_shadow</item>
    </style>

    <style name="Drawer" parent="DrawerBase">
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="Drawer.ContentBase">
        <item name="android:background">@color/drawer_background</item>
    </style>

    <style name="Drawer.Content" parent="Drawer.ContentBase">
        <item name="android:layout_toLeftOf">@id/drawer_shadow</item>
        <item name="android:layout_alignParentLeft">true</item>
    </style>

    <style name="Drawer.Account" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="Drawer.Account.Text" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="Drawer.Account.Arrow" parent="">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/drawer_margin</item>
        <item name="android:src">@drawable/ic_account_switcher</item>
    </style>

    <style name="Drawer.Account.Image" parent="">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_margin">@dimen/drawer_margin</item>
        <item name="android:src">@drawable/ic_person</item>
    </style>

    <style name="Drawer.Account.Name" parent="Drawer.Account.Text">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Drawer.Account.Login" parent="Drawer.Account.Text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignWithParentIfMissing">true</item>
    </style>

    <style name="Drawer.Header" parent="" />

    <style name="Drawer.Header.Title">
        <item name="android:layout_marginLeft">@dimen/drawer_margin</item>
        <item name="android:layout_marginRight">@dimen/drawer_margin</item>
        <item name="android:textColor">@color/hint_foreground_material_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Drawer.Header.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">@dimen/drawer_line_margin</item>
        <item name="android:layout_marginRight">@dimen/drawer_line_margin</item>
        <item name="android:background">#ccc</item>
    </style>

    <style name="Drawer.Agent" parent="">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Drawer.Agent.Name" parent="">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">@dimen/drawer_margin</item>
        <item name="android:textAppearance">?android:textAppearanceListItemSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="Drawer.Agent.Line" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ccc</item>
        <item name="android:layout_marginLeft">@dimen/drawer_line_margin</item>
        <item name="android:layout_marginRight">@dimen/drawer_line_margin</item>
    </style>

    <style name="Drawer.Agent.Mark" parent="">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="TerminalCard" parent="CardView.Light" />

    <style name="TerminalCard.Container" parent="">
        <item name="android:minHeight">@dimen/terminal_card_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_padding</item>
    </style>

    <style name="TerminalCard.Title" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TerminalCard.Address" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">14dp</item>
    </style>

    <style name="TerminalCard.Date" parent="">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textColor">@color/card_date_color</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="TerminalCard.Date.Activity">
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="TerminalCard.Date.Payment"/>

    <style name="TerminalCard.Notification" parent="">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TerminalCard.Notification.Error">
        <item name="android:background">@color/terminal_state_error_background</item>
        <item name="android:textColor">@color/terminal_state_error_foreground</item>
    </style>

    <style name="TerminalCard.Notification.Warning">
        <item name="android:background">@color/terminal_state_warn_background</item>
        <item name="android:textColor">@color/terminal_state_warn_foreground</item>
    </style>

    <style name="TerminalInfoCard" parent="CardView.Light"/>

    <style name="TerminalInfoCard.Title" parent="TerminalCard.Title">
        <item name="android:layout_marginTop">@dimen/card_padding</item>
        <item name="android:layout_marginLeft">@dimen/card_padding</item>
        <item name="android:layout_marginRight">@dimen/card_padding</item>
    </style>

    <style name="TerminalInfoCard.Address" parent="TerminalCard.Address">
        <item name="android:layout_marginLeft">@dimen/card_padding</item>
        <item name="android:layout_marginRight">@dimen/card_padding</item>
    </style>

    <style name="TerminalInfoCard.State" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:padding">@dimen/card_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

    <style name="TerminalInfoCard.CardTitle" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
        <item name="android:textColor">@color/actionbar_primary_dark</item>
    </style>

    <style name="TerminalInfoCard.Line" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/primary_material_light</item>
    </style>

    <style name="TerminalInfoCard.Item" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/card_padding</item>
        <item name="android:paddingRight">@dimen/card_padding</item>
    </style>

    <style name="TerminalInfoCard.Item.Title">
        <item name="android:paddingTop">@dimen/card_padding</item>
        <item name="android:textColor">@color/primary_text_default_material_light</item>
    </style>

    <style name="TerminalInfoCard.Item.Value">
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">@dimen/card_padding</item>
        <item name="android:textColor">@color/secondary_text_default_material_light</item>
    </style>

    <style name="TerminalInfoCard.Item.More" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:paddingLeft">0dp</item>
    </style>

</resources>
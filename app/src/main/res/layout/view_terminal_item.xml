<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TerminalCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            style="@style/TerminalCard.Container">

            <TextView
                android:id="@+id/terminal_last_activity"
                style="@style/TerminalCard.Date.Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="today, 18:25"/>

            <TextView
                android:id="@+id/terminal_title"
                style="@style/TerminalCard.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/terminal_last_activity"
                android:layout_alignWithParentIfMissing="true"
                tools:ignore="RtlHardcoded"
                tools:text="Terminal name"/>

            <TextView
                android:id="@+id/terminal_address"
                style="@style/TerminalCard.Address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/terminal_title"
                tools:text="Terminal Address"/>

            <TextView
                android:id="@+id/terminal_last_payment"
                style="@style/TerminalCard.Date.Payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/terminal_address"
                tools:text="3 hours ago"/>

            <TextView
                android:id="@+id/terminals_cash"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/terminal_address"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/terminal_last_payment"
                android:layout_alignWithParentIfMissing="true"
                tools:ignore="RtlHardcoded"
                tools:text="10 000$"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/terminal_state_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TerminalCard.Notification.Error"
            tools:text="Alarm! Upya4ka!"
            tools:visibility="gone"/>
        <TextView
            android:id="@+id/terminal_state_warn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TerminalCard.Notification.Warning"
            tools:text="I'm an idiot. Please kill me someone."
            tools:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
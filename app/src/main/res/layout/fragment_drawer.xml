<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="org.pvoid.apteryx.MainActivity">
    <View
        android:layout_width="7dp"
        android:layout_height="match_parent"
        style="@style/Drawer"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/DrawerContent">
        <TextView
            android:id="@+id/current_account"
            style="@style/CurrentAccount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/current_account_height"
            android:text="@string/empty_account"/>
    </LinearLayout>
</RelativeLayout>